{% extends 'Kh/AdminBundle/Views/base.twig' %}

{% set title = 'Главная' %}

{% block content %}

	{% for route, item in adminMenu %}
		<div class="list-group col-md-3">
			{% if item.noLink %}<span class="list-group-item list-group-item-success"><b>{{ item.title }}</b></span>
			{% else %}<a class="list-group-item" href="{{ path(route) }}">{{ item.title }}</a>
			{% endif %}
			{% if item.items %}
				{% for route, item in item.items %}
					<a class="list-group-item" href="{% if not item.directLink %}{{ path(route) }}{% else %}{{ route }}{% endif %}">{{ item.title }}</a>
				{% endfor %}
			{% endif %}
		</div>
	{% endfor %}

{% endblock %}